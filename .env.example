// .env.example
APP_NAME="PHP Mini Framework"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_KEY=
APP_TIMEZONE=UTC

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=framework
DB_USERNAME=root
DB_PASSWORD=

MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourapp.com
MAIL_FROM_NAME="Your App Name"
MAIL_TEST_TO=test@example.com

# Office 365 Mail Settings (alternative to Gmail)
# MAIL_HOST=smtp.office365.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@yourcompany.com
# MAIL_PASSWORD=your-password
# MAIL_ENCRYPTION=tls

# WhatsApp Settings
WHATSAPP_ENABLED=false
WHATSAPP_PROVIDER=twilio

# Twilio WhatsApp
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=+14155238886

# Meta WhatsApp Business API
META_WHATSAPP_ACCESS_TOKEN=your_meta_access_token
META_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
META_WHATSAPP_VERIFY_TOKEN=your_verify_token

# SMS Settings
SMS_ENABLED=false
SMS_PROVIDER=twilio

# Twilio SMS
TWILIO_SMS_FROM=+1234567890

# Nexmo/Vonage SMS
NEXMO_API_KEY=your_nexmo_api_key
NEXMO_API_SECRET=your_nexmo_api_secret
NEXMO_SMS_FROM=YourApp

# AWS SMS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Custom SMS/WhatsApp
SMS_API_URL=https://your-sms-provider.com/api/send
SMS_API_KEY=your_api_key
WHATSAPP_WEBHOOK_URL=https://your-whatsapp-provider.com/api/send
WHATSAPP_API_KEY=your_whatsapp_api_key